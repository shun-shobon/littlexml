{
	"name": "@shun-shobon/littlexml",
	"version": "0.6.2",
	"type": "module",
	"description": "1kB XML library for Node.js, Bun, Deno, Browser, Edge runtime.",
	"repository": {
		"type": "git",
		"url": "https://github.com/shun-shobon/littlexml.git"
	},
	"homepage": "https://github.com/shun-shobon/littlexml#readme",
	"author": "NISHIZAWA Shuntaro <me@s2n.tech> (https://s2n.tech/)",
	"license": "MIT",
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"xml",
		"builder",
		"utility"
	],
	"scripts": {
		"build": "tsup",
		"format": "prettier -w .",
		"format:check": "prettier -c .",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@shun-shobon/eslint-config": "^0.13.3",
		"@shun-shobon/prettier-config": "^0.4.6",
		"@vitest/coverage-v8": "^1.6.0",
		"eslint": "^9.8.0",
		"prettier": "^3.3.3",
		"tsup": "^8.2.3",
		"typescript": "^5.5.4",
		"vitest": "^1.6.0"
	},
	"sideEffects": false
}
